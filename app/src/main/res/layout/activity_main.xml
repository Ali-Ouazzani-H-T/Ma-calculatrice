<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:text="0"
            android:layout_gravity="end"
            android:textSize="30sp"
            tools:ignore="RtlCompat"
            android:id="@+id/textOperation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:text="0"
            android:textSize="45sp"
            tools:ignore="RtlCompat"
            android:id="@+id/textResult"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="#F44336"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="C"
                android:textColor="@color/white"
                android:onClick="Onclick_C"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="( )"
                android:textColor="@color/orange"
                android:onClick="Onclick_Brackets"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="^"
                android:textColor="@color/orange"
                android:onClick="OnClick_pwr"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="/"
                android:textColor="@color/orange"
                android:onClick="OnClick_division"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="7"
                android:textColor="@color/white"
                android:onClick="OnClick_7"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="8"
                android:textColor="@color/white"
                android:onClick="OnClick_8"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="9"
                android:textColor="@color/white"
                android:onClick="OnClick_9"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="*"
                android:textColor="@color/orange"
                android:onClick="OnClick_multi"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="6"
                android:textColor="@color/white"
                android:onClick="OnClick_6"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="5"
                android:textColor="@color/white"
                android:onClick="OnClick_5"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="4"
                android:textColor="@color/white"
                android:onClick="OnClick_4"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="-"
                android:textColor="@color/orange"
                android:onClick="OnClick_substract"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="3"
                android:textColor="@color/white"
                android:onClick="OnClick_3"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="2"
                android:textColor="@color/white"
                android:onClick="OnClick_2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="1"
                android:textColor="@color/white"
                android:onClick="OnClick_1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="+"
                android:textColor="@color/orange"
                android:onClick="OnClick_Addition"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="."
                android:textColor="@color/white"
                android:onClick="OnClick_point"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="@color/black"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="0"
                android:textColor="@color/white"
                android:onClick="OnClick_0"/>



            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@null"
                android:backgroundTint="@color/orange"
                android:textSize="@dimen/calcButtonTextSize"
                android:text="="
                android:textColor="@color/white"
                android:onClick="OnClick_egale"/>

        </LinearLayout>


    </LinearLayout>





</LinearLayout>

